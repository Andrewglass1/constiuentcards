<div class="container" id="ccw_widget_container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 submit-address">
      <div id="fill-form-error">
        <p>Please provide a message and your email address</p>
      </div>
      <div class="ccw-after-order-success">
        <p>Thanks for your order!</p>
      </div>
      <div class="ccw-card-content clearfix ccw-remove-post-order">
        <h4><%= @widget.try(:message) %></h4>
        <div class="message-address-wrapper clearfix ccw-after-rep-chosen">
          <div class="col-md-6 ccw-after-rep-chosen message">
            <textarea placeholder="Add your message" id="user-message"></textarea>
          </div>
          <div class="col-md-6 address-data"></div>
        </div>
      </div>

      <form class="form-inline ccw-email-form ccw-after-rep-chosen ccw-remove-post-order">
        <div class="form-group">
          <input type="email" class="form-control input-sm" id="user-email" placeholder="Enter your email">
        </div>
        <button type="submit" class="btn btn-primary btn-sm" id="ccw_postcard_submit">Order</button>
      </form>

      <div class="clearfix" id="ccw_submit_div">
        <form class="form removeable" id="ccw_address_form">
          <div class="form-group">
            <input type="text" class="form-control" id="ccw_address_input" placeholder="Enter your address to locate your representative">
          </div>
        </form>
<!--
        <div class="col-md-6 col-md-offset-3 removeable">
          <button type="button" class="btn btn-primary" id="ccw_address_submit_button">Find my Legislators</button>
        </div> -->

        <p id="ccw_legislator_prompt">Select a Representative</p>
        <div class="list-group" id="ccw_legislators_list">
        </div>
      </div>

      <div id="ccw_logo">
        <a href="http://www.mypostcause.com" target="_blank">
           <img src='https://s3.amazonaws.com/postcause/log.png'>
        </a>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
