<div class="container" id="ccw_widget_container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 submit-address">
      <div class="card">
        <h4><%= @widget.try(:message) %></h4>
        <div class="address-data"></div>
      </div>

      <div class="submit-address" id="ccw_submit_div">
        <form class="form-inline removeable">
          <div class="form-group">
            <label for="exampleInputEmail2">Email</label>
            <input type="text" class="form-control" id="address" placeholder="Enter your address">
          </div>
        </form>

        <div class="col-md-6 col-md-offset-3 removeable">
          <button type="submit" class="btn btn-default" id="ccw_address_submit_button">Send invitation</button>
        </div>

        <div class="list-group" id="ccw_legislators_list">
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>